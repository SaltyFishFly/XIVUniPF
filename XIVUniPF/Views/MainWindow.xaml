<Window
    x:Class="XIVUniPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:XIVUniPF.Views"
    xmlns:c="clr-namespace:XIVUniPF.Classes"
    xmlns:vm="clr-namespace:XIVUniPF.ViewModels"
    xmlns:conv="clr-namespace:XIVUniPF.Converters"
    xmlns:core="clr-namespace:XIVUniPF_Core;assembly=XIVUniPF-Core"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
    mc:Ignorable="d"
    Title="XIVUniPF"
    MinWidth="700"
    MinHeight="400"
    Width="1200"
    Height="800"
    DataContext="{DynamicResource ViewModel}"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen"
    WindowChrome.WindowChrome="{DynamicResource CustomChrome}"
    Icon="pack://application:,,,/Assets/PartyFinder@2x.png">
    <Window.Resources>
        <vm:MainViewModel x:Key="ViewModel"/>
        <!-- 自定义边框 -->
        <WindowChrome x:Key="CustomChrome">
            <WindowChrome.UseAeroCaptionButtons>false</WindowChrome.UseAeroCaptionButtons>
            <WindowChrome.CaptionHeight>0</WindowChrome.CaptionHeight>
            <WindowChrome.ResizeBorderThickness>4</WindowChrome.ResizeBorderThickness>
            <WindowChrome.GlassFrameThickness>0</WindowChrome.GlassFrameThickness>
        </WindowChrome>
        <local:PartyFinderPage
            x:Key="PartyFinderPage"
            SettingsButtonClicked="PartyFinderPage_SettingsButtonClicked"/>
        <local:SettingsPage
            x:Key="SettingsPage"
            BackButtonClicked="SettingsPage_BackButtonClicked"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <ui:TitleBar
            x:Name="TitleBar"
            Grid.Row="0"
            Title="XIVUniPF"
            CloseWindowByDoubleClickOnIcon="True">
        </ui:TitleBar>
        <Frame
            x:Name="MainFrame"
            Grid.Row="1"
            Margin="{StaticResource RootPanelMargin}"
            Navigated="MainFrame_Navigated">
        </Frame>
    </Grid>
</Window>
